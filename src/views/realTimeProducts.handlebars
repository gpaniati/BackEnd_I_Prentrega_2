<header>
    <div class="container mt-3">
        <h1 class="mb-3" style="text-align: center;">Lista de Productos</h1>
    </div>
</header>
<main>
    <section>
        <div id="card-container" class="row">
            <!-- Con WebSockets -->
            <!-- Aca se apendean las cartas con los productos -->

            {{#each productos}}
            <div class="col-md-3">
                <div class="card mb-3" style="width: 20rem">
                    <img src="{{thumbnails}}" class="card-img-top" alt="{{code}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text"><strong>Precio: ${{price}}</strong></p>
                        <button type="button" class="btn btn-danger"
                            onclick="eliminarProducto('{{id}}')">Eliminar</button>
                    </div>
                </div>
            </div>
            {{/each}}



        </div>
    </section>
</main>

<script src="/socket.io/socket.io.js"></script>
<script src="/api/public/js/realTimeProducts.js"></script>